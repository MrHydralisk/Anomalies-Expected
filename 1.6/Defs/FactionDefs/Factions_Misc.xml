<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<FactionDef ParentName="FactionBase">
		<defName>AE_SnowArmy</defName>
		<label>snow army entities</label>
		<fixedName>Snow army</fixedName>
		<pawnSingular>snow soldier</pawnSingular>
		<pawnsPlural>snow army</pawnsPlural>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<raidCommonalityFromPointsCurve>
			<points>
				<li>(0, 0)</li>
			</points>
		</raidCommonalityFromPointsCurve>
		<humanlikeFaction>false</humanlikeFaction>
		<hidden>true</hidden>
		<displayInFactionSelection>false</displayInFactionSelection>
		<autoFlee>false</autoFlee>
		<canUseAvoidGrid>false</canUseAvoidGrid>
		<techLevel>Ultra</techLevel>
		<permanentEnemyToEveryoneExcept>
			<li>Mechanoid</li>
		</permanentEnemyToEveryoneExcept>
		<hostileToFactionlessHumanlikes>true</hostileToFactionlessHumanlikes>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
		<allowedArrivalTemperatureRange>-2000~2000</allowedArrivalTemperatureRange>
		<maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
		<configurationListOrderPriority>1300</configurationListOrderPriority>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(400,200)</li>
				<li>(900,300)</li>
				<li>(100000,10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		<backstoryFilters>
			<li>
				<categories>
					<li>Cult</li><!-- Just in case -->
				</categories>
			</li>
		</backstoryFilters>
		<pawnGroupMakers>
			<li>
				<!-- All types-->
				<kindDef>AE_AdvancedMonolith</kindDef>
				<commonality>100</commonality>
				<options>
					<AE_SnowMan>30</AE_SnowMan>
					<AE_SnowGolem>0.4</AE_SnowGolem>
					<AE_SnowSpider>250</AE_SnowSpider>
					<AE_IceMantis>1</AE_IceMantis>
					<AE_IceMan>2</AE_IceMan>
				</options>
			</li>
			<li>
				<!-- Snow only-->
				<kindDef>AE_AdvancedMonolith</kindDef>
				<commonality>85</commonality>
				<options>
					<AE_SnowMan>10</AE_SnowMan>
					<AE_SnowGolem>0.05</AE_SnowGolem>
					<AE_SnowSpider>100</AE_SnowSpider>
				</options>
			</li>
			<li>
				<!-- Iced Art only-->
				<kindDef>AE_AdvancedMonolith</kindDef>
				<commonality>85</commonality>
				<options>
					<AE_SnowGolem>0.45</AE_SnowGolem>
					<AE_IceMantis>5.8</AE_IceMantis>
					<AE_IceMan>6</AE_IceMan>
				</options>
			</li>
			<li>
				<!-- Ranged only-->
				<kindDef>AE_AdvancedMonolith</kindDef>
				<commonality>85</commonality>
				<options>
					<AE_SnowMan>10</AE_SnowMan>
					<AE_SnowGolem>0.075</AE_SnowGolem>
					<AE_IceMan>0.75</AE_IceMan>
				</options>
			</li>
			<li>
				<!-- Melee only-->
				<kindDef>AE_AdvancedMonolith</kindDef>
				<commonality>70</commonality>
				<options>
					<AE_SnowSpider>10</AE_SnowSpider>
					<AE_IceMantis>1.9</AE_IceMantis>
				</options>
			</li>
			<li>
				<!-- Ranged Snow only-->
				<kindDef>AE_AdvancedMonolith</kindDef>
				<commonality>70</commonality>
				<options>
					<AE_SnowMan>10</AE_SnowMan>
					<AE_SnowGolem>0.075</AE_SnowGolem>
				</options>
			</li>
			<li>
				<!-- Spider distraction -->
				<kindDef>AE_AdvancedMonolith</kindDef>
				<commonality>70</commonality>
				<options>
					<AE_SnowMan>10</AE_SnowMan>
					<AE_SnowSpider>25</AE_SnowSpider>
				</options>
			</li>
			<li>
				<!-- SnowedIce only-->
				<kindDef>AE_AdvancedMonolith</kindDef>
				<commonality>70</commonality>
				<options>
					<AE_SnowMan>10</AE_SnowMan>
					<AE_IceMan>4.2</AE_IceMan>
				</options>
			</li>
			<li>
				<!-- Iced only-->
				<kindDef>AE_AdvancedMonolith</kindDef>
				<commonality>70</commonality>
				<options>
					<AE_IceMantis>10</AE_IceMantis>
					<AE_IceMan>6</AE_IceMan>
				</options>
			</li>
			<li>
				<!-- Spider Rush-->
				<kindDef>AE_AdvancedMonolithRush</kindDef>
				<commonality>50</commonality>
				<options>
					<AE_SnowSpider>10</AE_SnowSpider>
				</options>
			</li>
			<li>
				<!-- Ice Mantis Rush-->
				<kindDef>AE_AdvancedMonolithRush</kindDef>
				<commonality>50</commonality>
				<options>
					<AE_IceMantis>10</AE_IceMantis>
				</options>
			</li>
			<li>
				<!-- Snow Man Rush-->
				<kindDef>AE_AdvancedMonolithRush</kindDef>
				<commonality>40</commonality>
				<options>
					<AE_SnowMan>10</AE_SnowMan>
				</options>
			</li>
			<li>
				<!-- Snow Man Rush-->
				<kindDef>AE_BasicMonolith</kindDef>
				<commonality>50</commonality>
				<options>
					<AE_SnowMan>10</AE_SnowMan>
				</options>
			</li>
		</pawnGroupMakers>
	</FactionDef>

</Defs>