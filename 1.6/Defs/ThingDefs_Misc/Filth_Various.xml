<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="FilthBlood">
		<defName>Filth_AEIceBlood</defName>
		<label>ice blood</label>
		<graphicData>
			<texPath>Things/Filth/Spatter</texPath>
			<color>(171, 209, 243, 180)</color>
		</graphicData>
	</ThingDef>

	<ThingDef ParentName="FilthBlood">
		<defName>Filth_AEIceBloodSmear</defName>
		<label>ice blood smear</label>
		<graphicData>
			<texPath>Things/Filth/CrawlSmear</texPath>
			<color>(171, 209, 243, 165)</color>
			<graphicClass>Graphic_ClusterTight</graphicClass>
			<drawSize>0.9</drawSize>
		</graphicData>
	</ThingDef>

	<ThingDef ParentName="BaseFilth">
		<defName>Filth_AESpentNitrogen</defName>
		<label>spent nitrogen</label>
		<statBases>
			<Beauty>-30</Beauty>
			<Cleanliness>-5</Cleanliness>
		</statBases>
		<graphicData>
			<texPath>Things/Filth/AE_Nitrogen</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<drawSize>2.5</drawSize>
			<color>(1,1,1,0.5)</color>
		</graphicData>
		<filth>
			<ignoreFilthMultiplierStat>true</ignoreFilthMultiplierStat>
			<disappearsInDays>35~40</disappearsInDays>
			<rainWashes>true</rainWashes>
			<cleaningWorkToReduceThickness>70</cleaningWorkToReduceThickness>
			<canFilthAttach>true</canFilthAttach>
			<maxThickness>1</maxThickness>
			<cleaningSound>Interact_CleanFilth_Fluid</cleaningSound>
		</filth>
	</ThingDef>

</Defs>
