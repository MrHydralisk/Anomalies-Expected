<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef Name="RecipeMakeAEBloodLiquidBioferrite" Abstract="True">
		<description>Separate bioferrite from blood-like liquid by filtering it.</description>
		<descriptionHyperlinks>
			<ThingDef>AE_BloodLiquid</ThingDef>
			<ThingDef>Bioferrite</ThingDef>
		</descriptionHyperlinks>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<soundWorking>Recipe_Cremate</soundWorking>
		<effectWorking>Cremate</effectWorking>
		<workSkill>Crafting</workSkill>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AE_BloodLiquid</li>
			</thingDefs>
		</fixedIngredientFilter>
		<recipeUsers>
			<li>BiofuelRefinery</li>
		</recipeUsers>
		<researchPrerequisite>AEBloodFiltering</researchPrerequisite>
	</RecipeDef>

	<RecipeDef ParentName="RecipeMakeAEBloodLiquidBioferrite">
		<defName>MakeAEBloodLiquidBioferrite</defName>
		<label>filter out bioferrite</label>
		<jobString>Filtering out bioferite.</jobString>
		<products>
			<Bioferrite>1</Bioferrite>
		</products>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AE_BloodLiquid</li>
					</thingDefs>
				</filter>
				<count>8</count>
			</li>
		</ingredients>
		<workAmount>1100</workAmount>
		<skillRequirements>
			<Crafting>8</Crafting>
		</skillRequirements>
	</RecipeDef>

	<RecipeDef ParentName="RecipeMakeAEBloodLiquidBioferrite">
