<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- =========================================================
       AE_BloodLakeBiome
       A fleshmass-infected region by Blood Lake, 
       featuring certain extreme conditions and diseases.
      ========================================================= -->
  <BiomeDef>
    <defName>AE_BloodLakeBiome</defName>
    <label>Blood Lake</label>
    <description>A fleshmass-infected region on the far side of the Blood Lake. Hostile to most life, this environment is bleak and contaminated.</description>
    
    <!-- Basic generation & density parameters -->
    <generatesNaturally>false</generatesNaturally>
    <animalDensity>0</animalDensity>
    <plantDensity>0.20</plantDensity>
    <wildAnimalsCanWanderInto>false</wildAnimalsCanWanderInto>

    <!-- Weather patterns -->
    <baseWeatherCommonalities>
      <AE_BloodLakeWeatherClear>1</AE_BloodLakeWeatherClear>
      <!-- Optionally add other weathers if desired, e.g.:
      <Rain>0.2</Rain>
      <Fog>0.1</Fog>
      -->
    </baseWeatherCommonalities>

    <!-- Disease settings -->
    <diseaseMtbDays>10</diseaseMtbDays>
    <diseases>
      <li>
        <diseaseInc>Disease_FibrousMechanites</diseaseInc>
        <commonality>40</commonality>
      </li>
      <li>
        <diseaseInc>Disease_SensoryMechanites</diseaseInc>
        <commonality>40</commonality>
      </li>
      <li>
        <diseaseInc>Disease_GutWorms</diseaseInc>
        <commonality>30</commonality>
      </li>
      <li>
        <diseaseInc>Disease_MuscleParasites</diseaseInc>
        <commonality>30</commonality>
      </li>
    </diseases>

    <!-- Terrain coverage by fertility -->
    <terrainsByFertility>
      <li>
        <terrain>Sand</terrain>
        <min>-999</min>
        <max>999</max>
      </li>
      <!-- Add more terrain/fertility entries if needed -->
    </terrainsByFertility>
  </BiomeDef>

  <!-- =========================================================
       AE_ChristmasTreeBiome
       An ice-covered region near the Christmas Tree,
       with low plant/animal density and chilly weather.
      ========================================================= -->
  <BiomeDef>
    <defName>AE_ChristmasTreeBiome</defName>
    <label>Christmas Tree</label>
    <description>Glacial fields on the far side of the so-called 'Christmas Tree.' Freezing cold, nearly devoid of life, and perpetually covered in snow.</description>
    
    <!-- Basic generation & density parameters -->
    <generatesNaturally>false</generatesNaturally>
    <animalDensity>0</animalDensity>
    <plantDensity>0</plantDensity>
    <wildAnimalsCanWanderInto>false</wildAnimalsCanWanderInto>

    <!-- Weather patterns -->
    <baseWeatherCommonalities>
      <SnowHard>1</SnowHard>
      <!-- Optionally add other weathers if desired, e.g.:
      <Fog>0.2</Fog>
      <SnowGentle>0.3</SnowGentle>
      -->
    </baseWeatherCommonalities>

    <!-- Disease settings -->
    <diseaseMtbDays>120</diseaseMtbDays>
    <diseases>
      <li>
        <diseaseInc>Disease_FibrousMechanites</diseaseInc>
        <commonality>40</commonality>
      </li>
      <li>
        <diseaseInc>Disease_SensoryMechanites</diseaseInc>
        <commonality>40</commonality>
      </li>
      <li>
        <diseaseInc>Disease_MuscleParasites</diseaseInc>
        <commonality>30</commonality>
      </li>
    </diseases>

    <!-- Terrain coverage by fertility -->
    <terrainsByFertility>
      <li>
        <terrain>Ice</terrain>
        <min>-999</min>
        <max>999</max>
      </li>
      <!-- Add more terrain/fertility entries if needed -->
    </terrainsByFertility>
  </BiomeDef>

</Defs>
